        </StackPanel>
        <StackPanel Grid.ColumnSpan="5" Grid.Column="6" HorizontalAlignment="Left" Height="78" Grid.Row="8" Grid.RowSpan="6" VerticalAlignment="Top" Width="84" Margin="1,2,0,0">
            <TextBlock Name="TxtUsername4" TextWrapping="Wrap" Text="Player Name" Background="Beige"/>
            <TextBlock Name="TxtBet4" TextWrapping="Wrap" Text="Bet:" Background="Beige"/>
