            <TextBlock Name="TxtBet7" TextWrapping="Wrap" Text="Bet:" Background="Beige"/>
            <TextBlock Name="TxtChips7" TextWrapping="Wrap" Text="Chips:"  Background="Beige"/>
            <Image     Name="ImgSmallBigBlind7"  Height="27" Margin="52,0,0,0" />
        </StackPanel>
        <StackPanel Grid.ColumnSpan="5" Grid.Column="26" HorizontalAlignment="Left" Height="78" Grid.Row="24" Grid.RowSpan="6" VerticalAlignment="Top" Width="84" Margin="10,10,0,0">
            <TextBlock Name="TxtUsername8" TextWrapping="Wrap" Text="Player Name" Background="Beige"/>
            <TextBlock Name="TxtBet8" TextWrapping="Wrap" Text="Bet:" Background="Beige"/>
            <TextBlock Name="TxtChips8" TextWrapping="Wrap" Text="Chips:"  Background="Beige"/>
            <Image     Name="ImgSmallBigBlind8"  Height="30" Margin="54,0,0,0" />
        </StackPanel>
        <StackPanel Grid.ColumnSpan="4" Grid.Column="20" HorizontalAlignment="Left" Height="78" Grid.Row="27" Grid.RowSpan="7" VerticalAlignment="Top" Width="84" Margin="0,5,0,0">
            <TextBlock Name="TxtUsername9" TextWrapping="Wrap" Text="Player Name" Background="Beige"/>
            <TextBlock Name="TxtBet9" TextWrapping="Wrap" Text="Bet:" Background="Beige"/>
            <TextBlock Name="TxtChips9" TextWrapping="Wrap" Text="Chips:"  Background="Beige"/>
            <Image     Name="ImgSmallBigBlind9"  Height="30" Margin="54,0,0,0" />
        </StackPanel>
        <Expander Name="ExpChat"  Grid.ColumnSpan="18"  Background="#00FFFFFF" HorizontalAlignment="Stretch" Grid.RowSpan="14" VerticalAlignment="Stretch"  IsExpanded="False" Grid.Column="18">
            <Expander.Header>
                <Border Background="LightGray">
                    <TextBlock  Foreground="Black" Text="Chat" HorizontalAlignment="Stretch" Width="{Binding ElementName=ExpChat, Path=ActualWidth}"/>
                </Border>
            </Expander.Header>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="15*" />
                    <RowDefinition Height="15*" />
                    <RowDefinition Height="15*" />
                    <RowDefinition Height="15*" />
                    <RowDefinition Height="15*" />
                    <RowDefinition Height="15*" />
                    <RowDefinition Height="15*" />
                    <RowDefinition Height="15*" />
