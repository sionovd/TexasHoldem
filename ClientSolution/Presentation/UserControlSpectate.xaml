                    <ColumnDefinition Width="50*" />
                    <ColumnDefinition Width="50*" />
                    <ColumnDefinition Width="50*" />
                    <ColumnDefinition Width="50*" />
                </Grid.ColumnDefinitions>
                <Button Name="BtnSend" Content="Send" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="17" Grid.RowSpan="3" Grid.ColumnSpan="3" Click="BtnSend_OnClick"/>
                <TextBox Name="TxtMessage" Grid.ColumnSpan="5" Grid.Column="3" HorizontalAlignment="Stretch"  Grid.Row="17" Grid.RowSpan="3" TextWrapping="Wrap" Text="Message" VerticalAlignment="Stretch"  GotFocus="TxtMessage_OnGotFocus" LostFocus="TxtMessage_OnLostFocus"/>
                <TextBox Name="TxtTo" Grid.ColumnSpan="3" Grid.Column="8" HorizontalAlignment="Stretch"  Grid.Row="17" Grid.RowSpan="3" TextWrapping="Wrap" Text="" VerticalAlignment="Stretch" />
                <ScrollViewer Name="ScrollViewerChat" Grid.ColumnSpan="11" Grid.RowSpan="17">
                    <ListView Name="ListViewChat" Grid.ColumnSpan="11" HorizontalAlignment="Stretch" Grid.RowSpan="17" VerticalAlignment="Stretch">
                        <ListView.View>
                            <GridView x:Name="GridView">
                                <GridView.Columns>
                                    <GridViewColumn Header="Name"  DisplayMemberBinding="{Binding Username}"/>
                                <GridViewColumn  Header="Message"  DisplayMemberBinding="{Binding Message}"></GridViewColumn>
                                    </GridView.Columns>
                            </GridView>
                        </ListView.View>
                        <ListView.Resources>
                            <Style TargetType="{x:Type ListViewItem}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Color}" Value="Gray">
                                        <Setter Property="Background" Value="LightGray"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ListView.Resources>
                    </ListView>
                </ScrollViewer>
            </Grid>
        </Expander>
        <Label Name="LblUsername" Content="Spectator: " Foreground="White" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.ColumnSpan="8" Grid.RowSpan="4" Grid.Row="1" Margin="0,6,0,0"/>



