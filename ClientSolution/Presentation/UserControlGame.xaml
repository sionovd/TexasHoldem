        </StackPanel>
        <Expander Name="ExpChat"  Grid.ColumnSpan="15"  Background="#00FFFFFF" HorizontalAlignment="Stretch" Grid.RowSpan="14" VerticalAlignment="Stretch"  IsExpanded="False" Grid.Column="21">
            <Expander.Header>
                <Border Background="LightGray">
                    <TextBlock  Foreground="Black" Text="Chat" HorizontalAlignment="Stretch" Width="{Binding ElementName=ExpChat, Path=ActualWidth}"/>
                </Border>
            </Expander.Header>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="15*" />
                    <RowDefinition Height="15*" />
                    <RowDefinition Height="15*" />
                    <RowDefinition Height="15*" />
                    <RowDefinition Height="15*" />
                    <RowDefinition Height="15*" />
                    <RowDefinition Height="15*" />
                    <RowDefinition Height="15*" />
                    <RowDefinition Height="15*" />
