            <TextBlock Name="TxtBet7" TextWrapping="Wrap" Text="Bet:" Background="DarkSalmon"/>
            <TextBlock Name="TxtChips7" TextWrapping="Wrap" Text="Chips:"  Background="DarkSalmon"/>
            <Image     Name="ImgSmallBigBlind7"  Height="27" Margin="52,0,0,0" />
        </StackPanel>
        <StackPanel Grid.ColumnSpan="5" Grid.Column="26" HorizontalAlignment="Left" Height="78" Grid.Row="24" Grid.RowSpan="6" VerticalAlignment="Top" Width="84" Margin="10,10,0,0">
            <TextBlock Name="TxtUsername8" TextWrapping="Wrap" Text="Player Name" Background="DarkSalmon"/>
            <TextBlock Name="TxtBet8" TextWrapping="Wrap" Text="Bet:" Background="DarkSalmon"/>
            <TextBlock Name="TxtChips8" TextWrapping="Wrap" Text="Chips:"  Background="DarkSalmon"/>
            <Image     Name="ImgSmallBigBlind8"  Height="30" Margin="54,0,0,0" />
        </StackPanel>
        <StackPanel Grid.ColumnSpan="4" Grid.Column="20" HorizontalAlignment="Left" Height="78" Grid.Row="27" Grid.RowSpan="7" VerticalAlignment="Top" Width="84" Margin="0,5,0,0">
            <TextBlock Name="TxtUsername9" TextWrapping="Wrap" Text="Player Name" Background="DarkSalmon"/>
            <TextBlock Name="TxtBet9" TextWrapping="Wrap" Text="Bet:" Background="DarkSalmon"/>
