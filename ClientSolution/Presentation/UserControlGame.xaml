        </Grid.ColumnDefinitions>
        <Image Name="com3" Source="images/cards/Back.png" Grid.ColumnSpan="4" Grid.Column="16" HorizontalAlignment="Left" Height="112" Grid.Row="14" Grid.RowSpan="8" VerticalAlignment="Top" Width="52" Margin="18,0,0,0"/>
        <Image Name="com4" Source="images/cards/Back.png" Grid.ColumnSpan="3" Grid.Column="19" HorizontalAlignment="Left" Height="112" Grid.Row="14" Grid.RowSpan="8" VerticalAlignment="Top" Width="52" Margin="10,0,0,0"/>
        <Image Name="com2" Source="images/cards/Back.png" Grid.ColumnSpan="3" Grid.Column="14" HorizontalAlignment="Left" Height="112" Grid.Row="14" Grid.RowSpan="8" VerticalAlignment="Top" Width="52" Margin="5,0,0,0"/>
        <Image Name="com5" Source="images/cards/Back.png" Grid.ColumnSpan="3" Grid.Column="22" HorizontalAlignment="Left" Height="112" Grid.Row="14" Grid.RowSpan="8" VerticalAlignment="Top" Width="52" Margin="3,0,0,0"/>
        <Image Name="com1" Source="images/cards/Back.png" Grid.ColumnSpan="4" Grid.Column="11" HorizontalAlignment="Left" Height="112" Grid.Row="14" Grid.RowSpan="8" VerticalAlignment="Top" Width="52" Margin="13,0,0,0"/>
        <Image Name="hole2" Source="images/cards/Back.png" Grid.ColumnSpan="3" Grid.Column="18" HorizontalAlignment="Left" Height="112" Grid.Row="20" Grid.RowSpan="7" VerticalAlignment="Top" Width="52"/>
        <Image Name="hole1" Source="images/cards/Back.png" Grid.ColumnSpan="3" Grid.Column="15" HorizontalAlignment="Left" Height="112" Grid.Row="20" Grid.RowSpan="7" VerticalAlignment="Top" Width="52" Margin="7,0,0,0"/>
        <Button x:Name="btnLeaveTable" Content="Leave Table" HorizontalAlignment="Stretch"  Margin="0,0,10,9" VerticalAlignment="Bottom" Height="20" Click="BtnLeaveTable_Click" Grid.ColumnSpan="4" Grid.RowSpan="2"/>
        <RadioButton x:Name="rdbtnBet" Content="Bet" IsEnabled="True" HorizontalAlignment="Stretch"   Grid.Row="31" VerticalAlignment="Stretch" Foreground="White" Grid.ColumnSpan="3" Checked="RadioButton_Checked" />
        <RadioButton x:Name="rdbtnCall" Content="Call" IsEnabled="True" HorizontalAlignment="Stretch"   Grid.Row="32" VerticalAlignment="Stretch" Foreground="White" Grid.ColumnSpan="3" Checked="RadioButton_Checked" />
        <RadioButton x:Name="rdbtnCheck" Content="Check" IsEnabled="True" HorizontalAlignment="Stretch"   Grid.Row="33" VerticalAlignment="Stretch" Foreground="White" Grid.ColumnSpan="3" Checked="RadioButton_Checked"/>
        <RadioButton x:Name="rdbtFold" Content="Fold" IsEnabled="True" HorizontalAlignment="Stretch"   Grid.Row="34" VerticalAlignment="Stretch" Foreground="White" Grid.ColumnSpan="3"  Checked="RadioButton_Checked"/>
        <TextBox x:Name="txtBetSize" Grid.ColumnSpan="4" Grid.Column="4" Visibility="Hidden" HorizontalAlignment="Stretch" Height="23" Grid.Row="31" Grid.RowSpan="2" IsEnabled="false" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" TextChanged="TextBox_TextChanged"/>
        <Button x:Name="btnConfirm" Grid.ColumnSpan="3" Content="Confirm" Grid.Column="5" HorizontalAlignment="Stretch" IsEnabled="True" Visibility="Visible" Grid.Row="33" Grid.RowSpan="2" VerticalAlignment="Stretch" Click="BtnConfirm_Click" />
        <DataGrid Name="stateGameBoard" Grid.ColumnSpan="16" Grid.Column="20" HorizontalAlignment="Stretch" Grid.RowSpan="13" VerticalAlignment="Stretch" />
        <TextBlock Name="txtPotSize" Background="White" Grid.ColumnSpan="6" FontSize="16" Grid.Column="30" HorizontalAlignment="Stretch" TextAlignment="Center"  Grid.Row="34" Grid.RowSpan="2" TextWrapping="Wrap" Text="0" VerticalAlignment="Stretch" />
        <Label Name="lblPotSize" Content="Pot Size:" Foreground="White" FontSize="16" Grid.Column="26" HorizontalAlignment="Stretch" Grid.Row="34" Grid.RowSpan="2" VerticalAlignment="Stretch" Grid.ColumnSpan="4" />
        <Button Name="btnStartGame" Grid.ColumnSpan="4" Content="Start Game" Grid.Column="16" HorizontalAlignment="Stretch" Grid.Row="34" VerticalAlignment="Stretch"  Grid.RowSpan="2" Click="BtnStartGame_Click" />

    </Grid>
</UserControl>
