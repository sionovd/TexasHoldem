        </StackPanel>
        <StackPanel Grid.ColumnSpan="5" Grid.Column="20" HorizontalAlignment="Left" Height="78" Grid.Row="5" Grid.RowSpan="6" VerticalAlignment="Top" Width="84" Margin="1,10,0,0">
            <TextBlock Name="TxtUsername6" TextWrapping="Wrap" Text="Player Name" Background="DarkSalmon"/>
            <TextBlock Name="TxtBet6" TextWrapping="Wrap" Text="Bet:" Background="DarkSalmon"/>
            <TextBlock Name="TxtChips6" TextWrapping="Wrap" Text="Chips:"  Background="DarkSalmon"/>
            <Image     Name="ImgSmallBigBlind6"  Height="30" Margin="54,0,0,0" />
        </StackPanel>
        <StackPanel Grid.ColumnSpan="5" Grid.Column="28" HorizontalAlignment="Left" Height="78" Grid.Row="16" Grid.RowSpan="7" VerticalAlignment="Top" Width="84" Margin="10,4,0,0">
