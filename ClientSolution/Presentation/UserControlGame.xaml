                    <ColumnDefinition Width="50*" />
                </Grid.ColumnDefinitions>
                <Button Content="Send" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="17" Grid.RowSpan="3" Grid.ColumnSpan="3"/>
                <TextBox Grid.ColumnSpan="8" Grid.Column="3" HorizontalAlignment="Stretch"  Grid.Row="17" Grid.RowSpan="3" TextWrapping="Wrap" Text="Messege" VerticalAlignment="Stretch"/>
                <ScrollViewer Name="ScrollViewerChat" Grid.ColumnSpan="11" Grid.RowSpan="17">
                    <ListView Name="ListViewChat" Grid.ColumnSpan="11" HorizontalAlignment="Stretch" Grid.RowSpan="17" VerticalAlignment="Stretch">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Name"  DisplayMemberBinding="{Binding Username}"/>
                                <GridViewColumn Header="Message"  DisplayMemberBinding="{Binding Message}"></GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </ScrollViewer>
            </Grid>
        </Expander>

    </Grid>
</UserControl>
